{
  "manifest_version": 3,
  "name": "YouTube Grid Extender",
  "version": "1.0",
  "description": "Adjust the number of items per row on the YouTube homepage.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://github.com/codyklr/YTGridExtender",
  "support_url": "https://github.com/codyklr/YTGridExtender/issues"
}
